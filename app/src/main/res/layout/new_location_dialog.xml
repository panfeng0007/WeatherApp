<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:fontFamily="arial"
        android:textColor="@color/Ivory"
        android:textStyle="bold"
        android:gravity="center"
        android:background="@color/Orange"
        android:text="@string/add_new_city"/>

    <AutoCompleteTextView
        android:id="@+id/location_new"
        android:inputType="textAutoComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="@string/location"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/sep_top"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp" />
    <LinearLayout
        android:id="@+id/units_toggle_buttons"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:textSize="28sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/hint_foreground_material_light"
            android:text="@string/units"/>

        <Button
            android:id="@+id/f_button_dialog"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            android:textSize="24sp"
            android:elevation="0dp"
            android:background="@drawable/f_button_style"
            android:shadowRadius="0"
            />


        <Button
            android:id="@+id/c_button_dialog"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:paddingBottom="5dp"
            android:background="@drawable/c_button_style"
            android:textSize="24sp"
            android:elevation="0dp"
            android:shadowRadius="0"
            />
    </LinearLayout>
    <View
        android:id="@+id/sep_bottom"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="fill_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/dialog_cancel_btn"
            android:text="@string/cancel"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/dialog_add_btn"
            android:text="@string/add"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
