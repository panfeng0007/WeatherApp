<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/LightSteelBlue"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_above="@+id/unit_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <AutoCompleteTextView
            android:id="@+id/location_input"
            android:layout_weight="1"
            android:inputType="textAutoComplete"
            android:hint="@string/hint_location"
            android:completionHintView="@color/White"
            android:layout_gravity="bottom"
            android:layout_width="0dp"
            android:layout_height="58dp"
            />
        <ImageButton
            android:id="@+id/search_btn"
            android:src="@drawable/ic_search_black_48dp"
            android:background="@drawable/circle_button_2"
            android:elevation="4dp"
            android:layout_marginEnd="5dp"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/search"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/unit_layout"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/sep_top"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp" />
        <LinearLayout
            android:id="@+id/units_toggle_buttons"
            android:orientation="horizontal"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="bottom"
                android:layout_weight="1"
                android:textSize="28sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/hint_foreground_material_light"
                android:text="@string/units"/>

            <Button
                android:id="@+id/f_button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:textSize="24sp"
                android:elevation="0dp"
                android:textColor="@color/hint_foreground_material_light"
                android:background="@drawable/f_button_style"
                android:shadowRadius="0"
                />


            <Button
                android:id="@+id/c_button"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:paddingBottom="5dp"
                android:background="@drawable/c_button_style"
                android:textColor="@color/White"
                android:textSize="24sp"
                android:elevation="0dp"
                android:shadowRadius="0"
                />
        </LinearLayout>
        <View
            android:id="@+id/sep_bottom"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp" />

        <LinearLayout
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Switch
                android:id="@+id/is_pilot_toggle"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/hint_foreground_material_light"
                android:textSize="22sp"
                android:text="@string/is_pilot"/>

            <LinearLayout
                android:id="@+id/pilot_weather_options_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/query_metar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:visibility="invisible"
                    android:checked="true"
                    android:text="METAR"
                    />
                <CheckBox
                    android:id="@+id/query_taf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:checked="true"
                    android:text="TAF"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/query_pirep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginEnd="10dp"
                    android:visibility="invisible"
                    android:checked="true"
                    android:text="PIREP"
                    />
                <CheckBox
                    android:id="@+id/query_area_forecast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:checked="true"
                    android:text="Area Forecast"
                    />

            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_height="1dp" />
    </LinearLayout>
</RelativeLayout>
